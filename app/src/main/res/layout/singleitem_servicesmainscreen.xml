<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="225dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_serviceimage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/img_maintop_backg"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txt_servicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="service name"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/txt_serviceshortdesc"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:textSize="11sp"
            android:text="A short desription about a particular service"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/lightgray"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="explore !"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="@color/whitecustom"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:background="@drawable/roundback_greentoptwocornersround"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>