<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <!--layout or action bar with drawer icon and cart icon-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="@color/green"
        >
        <ImageView
            android:id="@+id/img_burgermenuicon"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_list_navdrawt"
            android:layout_marginStart="-5dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center_horizontal"
            android:text="Dr Aslaaf"
            android:textColor="@color/whitecustom"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/img_carticon"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_cart_shopping"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--layout for header with image in background and appointment button-->
            <!--card view for rounded corners-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardCornerRadius="40dp"
                android:layout_marginTop="-40dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/img_maintop_backg"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAVING HEALTH"
                        android:layout_marginTop="70dp"
                        android:textColor="@color/whitecustom"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_semibold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="without side effect"
                        android:textColor="@color/whitecustom"
                        android:textSize="25sp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="50dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/ic_calendar_appointment"
                                android:layout_marginEnd="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book appointment"
                                android:textColor="@color/green"
                                android:fontFamily="@font/nunito_extrabold"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--card layout below the header-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/whitecustom"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:baselineAligned="false"
                    >

                    <LinearLayout
                        android:id="@+id/card_aboutDoctorHome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_marginEnd="2dp"
                        android:background="?android:selectableItemBackground"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/ic_about_doctor"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center_horizontal"
                            android:text="about\nDoctor"
                            android:textColor="@color/gray"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_chatWithDoctorHome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_marginEnd="2dp"
                        android:background="?android:selectableItemBackground"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/ic_chat_withdoctor"
                            android:layout_gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="chat with\nDoctor"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_ourPharmacyHome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_marginEnd="2dp"
                        android:background="?android:selectableItemBackground"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/ic_store_pharmacy"
                            android:layout_gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="our\nPharmacy"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="?android:selectableItemBackground"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/ic_question_identifydesease"
                            android:layout_gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="identify\nDesease"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/nunito_extrabold"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <!--our services text below four options-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Our Services -"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_OurServices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        tools:listitem="@layout/singleitem_servicesmainscreen"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Gallery -"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_GalleryHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        tools:listitem="@layout/singleitem_gallerymainscreen"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW ALL+"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_semibold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Generel info -"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_extrabold"
                        />

                    <!--generel info bar with three options-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_margin="10dp"
                        android:padding="6dp"
                        android:background="@drawable/roundbackg_first"
                        >
                        <TextView
                            android:id="@+id/txt_locationHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            />
                        <TextView
                            android:id="@+id/txt_timingHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Timing"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            />
                        <TextView
                            android:id="@+id/txt_callHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Contact us -"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_extrabold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_callHome"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/png_contactust"
                            app:civ_border_color="@color/green"
                            app:civ_border_width="5dp"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_whatsAppHome"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/png_whatsappt"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="@color/green"
                            app:civ_border_width="5dp"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_gmailHome"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/png_gmailt"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="@color/green"
                            app:civ_border_width="5dp"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_instaHome"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/png_instagramt"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="@color/green"
                            app:civ_border_width="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="@color/green"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>